<html>
<head>
	<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" />
	<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
	<link type="text/css" rel="stylesheet" href="{{asset('bundles/teaochasonataadminimagepanel/css/cropper/cropper.min.css')}}" />
	<link type="text/css" rel="stylesheet" href="{{asset('bundles/teaochasonataadminimagepanel/css/modal-image.css')}}" />
	<link type="text/css" rel="stylesheet" href="{{asset('bundles/teaochasonataadminimagepanel/css/image-panel.css')}}" />

	<script src="https://code.jquery.com/jquery-2.2.3.min.js" integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=" crossorigin="anonymous"></script>
	<script src="{{asset('bundles/teaochasonataadminimagepanel/js/cropper/cropper.min.js')}}"></script>
	<script src="{{asset('bundles/teaochasonataadminimagepanel/js/modal-image.js')}}"></script>
	<script src="{{asset('bundles/teaochasonataadminimagepanel/js/image-panel.js')}}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ asset('js/fos_js_routes.js') }}"></script>
</head>
<body>

    <div id="images_panel" data-modal=true data-ckeditor=true>
        <div id="images_panel_topbar">
            <span style="font-size: 2em">{{ 'image_panel.gallery'|trans([], "messages") }}</span>
            <button id="images_panel_close_button" class="btn btn-primary">Close</button>
            <button id="images_panel_upload_button" class="btn btn-danger">Upload</button>
            <button id="images_panel_from_url_button" class="btn btn-danger">{{  'image_panel.from_url'|trans([], "messages") }}</button>
            <input type="file" id="images_panel_file" multiple="multiple" style="display:none">
        </div>
        <div id="images_panel_images_list">
            {% for image in images %}
                <div class="images-panel-image" data-id="{{image.getId()}}">
                    <img src="{{ asset(image.getPreviewUrl()) }}" data-croppable=true />
                    <i class="fa fa-search images-panel-preview" aria-hidden="true" title="preview"></i>
                    <i class="fa fa-crop images-panel-crop" aria-hidden="true" title="crop"></i>
                    <i class="fa fa-times images-panel-delete" aria-hidden="true" title="delete"></i>
                    <span></span>
                </div>
            {% endfor %}
        </div>

        <div id="images_panel_url_form" class="hidden">
            <div class='form-header'>
                <h3>{{ 'image_panel.url'|trans([], "messages") }}</h3>
            </div>
            <div class="form-body">
                <input type="text" placeholder="http://imageurl.jpg" id="images_panel_url_form_input">
                <button class="btn btn-primary" id="images_panel_url_form_ok">OK</button>
                <button class="btn btn-danger" id="images_panel_url_form_cancel">{{ 'image_panel.cancel'|trans([], "messages") }}</button>
            </div>
        </div>
    </div>

</body>
</html>

