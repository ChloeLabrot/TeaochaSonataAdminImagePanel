{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
	<link type="text/css" rel="stylesheet" href="{{asset('bundles/teaochasonataadminimagepanel/css/cropper/cropper.min.css')}}" />
	<link type="text/css" rel="stylesheet" href="{{asset('bundles/teaochasonataadminimagepanel/css/modal-image.css')}}" />
	<link type="text/css" rel="stylesheet" href="{{asset('bundles/teaochasonataadminimagepanel/css/image-panel.css')}}" />
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
	{{ parent() }}
	<script src="{{asset('bundles/teaochasonataadminimagepanel/js/cropper/cropper.min.js')}}"></script>
	<script src="{{asset('bundles/teaochasonataadminimagepanel/js/modal-image.js')}}"></script>
